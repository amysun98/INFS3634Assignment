<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration = "3000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:shape="ring"
        android:thickness="15dp"
        android:innerRadius="160dp"
        android:useLevel="false">

        <gradient
            android:startColor="@color/colorLighterColour"
            android:centerY="0.5"
            android:centerColor="@color/colorMiddleColour"
            android:endColor="@color/colorDarkerColour"
            android:type="sweep"
            android:useLevel="false"
            />

    </shape>
</rotate>